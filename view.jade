template(name='layout')
	+menu
	+yield

template(name='menu')
	.navbar-fixed: nav.teal: .nav-wrapper
		ul.left
			li: a Home
		a.brand-logo.center= navTitle
		ul.right
			if currentUser
				li: a= startCase(currentUser.username)
				li: a(href='/panduan') Panduan
				li: a#logout Logout
			else			
				li: a(href='/login') Login
	if currentUser
		ul.fixed.side-nav.z-depth-2
			li.grey.lighten-2: a.center: b= today
			each menus
				li: a.waves-effect.waves-teal(href='/{{name}}')
					span: b= full
					i.material-icons.right#sideIcon(class='{{color}}-text')= icon

template(name='home'): .container
	h4 Beranda

template(name='loading'): .container
	.progress.center: .indeterminate

template(name='pasien'): .container
	h5 Daftar Nama Pasien
	.row: .col.m4: .divider
	.row
		.col.m6
			unless currentPar 'no_mr'
				unless showForm
					.input-field: input#search(value= search placeholder= 'Cari Nama Pasien / No.MR')
		.col.m6
			with selPol
				form#selPol
					each selPol
						input(name='poli' type='radio' id= value)
						label(for= value)= label
			if showButton
				.right.btn#showForm= showButtonText
			if preview
				a.btn.modal-trigger(href='#preview') View

	if showForm
		+quickForm(
			collection= coll.pasien
			schema= schema
			type= formType
			id = 'formPasien'
			scope = 'rawat'
			doc= pasiens
			buttonContent = 'simpan'
			omitFields= omitFields
		)
	unless currentPar 'no_mr'
		table.bordered
			thead: tr
				each val in heads.pasien
					th= startCase(val)
			tbody
				each pasiens
					tr#row
						td= zeros(no_mr)
						td= startCase(regis.nama_lengkap)
						td
							span= regis.ayah
							span= regis.ibu
						td= regis.alamat
						td {{look 'kelamin' regis.kelamin 'label'}}
						td= hari(regis.tgl_lahir)
		if pasiens
			+pagination(name= 'pasien')
		if userRole 'admin'
			if routeIs 'regis'
				+import
				+report(jenis='pendaftaran')
			else if routeIs 'jalan'
				+report(jenis='rawat_jalan')
		if routeIs 'bayar'
			h5 Daftar Bayar
			table.bordered
				thead: tr
					each val in heads.bayar
						th= startCase(val)
				tbody
					each pasien in pasiens
						each item in pasien.rawat
							unless item.billRegis
								tr
									td= zeros(pasien.no_mr)
									td= pasien.regis.nama_lengkap
									td= hari(item.tanggal)
									td= rupiah(item.karcis)
									td {{look 'cara_bayar' item.cara_bayar 'label'}}
									td Konsultasi
									td
										a#bill(
											pasien= pasien.no_mr
											idbayar= item.idbayar
											karcis= item.karcis
										) Bayar
							if isTrue item.cara_bayar 1
								unless item.status_bayar
									if item.total.semua
										tr
											td= zeros(pasien.no_mr)
											td= pasien.regis.nama_lengkap
											td= hari(item.tanggal)
											td= rupiah(item.total.semua)
											td {{look 'cara_bayar' item.cara_bayar 'label'}}
											td {{look 'klinik' item.klinik 'label'}}
											td
												a#bayar(
													pasien= pasien.no_mr
													idbayar= item.idbayar
												) Bayar
			br
			if userRole 'admin'
				+report(jenis='pembayaran')
		if routeIs 'labor'
			h5 Daftar Request Labor
			table.bordered
				thead: tr
					each val in heads.labor
						th= startCase(val)
				tbody
					each pasien in pasiens
						each item in pasien.rawat
							if item.status_bayar
								if item.labor
									each labor in item.labor
										unless labor.hasil
											tr
												td= zeros(pasien.no_mr)
												td= pasien.regis.nama_lengkap
												td {{look2 'tarif' labor.nama 'grup'}}
												td {{look2 'tarif' labor.nama 'nama'}}
												td
													a#request(
														pasien= pasien.no_mr
														idbayar= item.idbayar
														jenis= 'labor'
														idjenis= labor.idlabor
													) Isi
		if routeIs 'radio'
			h5 Daftar Request Radiologi
			table.bordered
				thead: tr
					each val in heads.radio
						th= startCase(val)
				tbody
					each pasien in pasiens
						each item in pasien.rawat
							if item.status_bayar
								if item.radio
									each radio in item.radio
										unless radio.hasil
											tr
												td= zeros(pasien.no_mr)
												td= pasien.regis.nama_lengkap
												td {{look2 'tarif' radio.nama 'nama'}}
												td
													a#request(
														pasien= pasien.no_mr
														idbayar= item.idbayar
														jenis = 'radio'
														idjenis= radio.idradio
													) Aksi
		if routeIs 'obat'
			h5 Daftar Request Obat
			table.bordered
				thead: tr
					each val in heads.obat
						th= startCase(val)
				tbody
					each pasien in pasiens
						each item in pasien.rawat
							if item.status_bayar
								if item.obat
									each obat in item.obat
										unless obat.hasil
											tr
												td= zeros(pasien.no_mr)
												td= pasien.regis.nama_lengkap
												td {{look2 'gudang' obat.nama 'nama'}}
												td= obat.aturan.kali
												td= obat.aturan.dosis
												td {{look 'bentuk' obat.aturan.bentuk 'label'}}
												td= obat.jumlah
												td
													a#request(
														pasien= pasien.no_mr
														idbayar= item.idbayar
														jenis = 'obat'
														idjenis= obat.idobat
													) Serah
			br
			br
			.purple.btn#rekap Rekap

	if currentPar 'no_mr'
		with pasiens
			if routeIs 'regis'
				.row
					.left.purple.btn#card Cetak
					.left.purple.btn#consent Consent
			.row
				.col.m6
					table
						tr
							th No MR
							td= zeros(no_mr)
						tr
							th Nama Lengkap
							td= regis.nama_lengkap
						tr
							th Tempat Tinggal
							td= regis.alamat
				.col.m6
					table
						tr
							th Tanggal Lahir
							td= hari(regis.tgl_lahir)
						tr
							th Tempat Lahir
							td= regis.tmpt_lahir
						tr
							th Umur
							td= umur(regis.tgl_lahir)
			if userRole 'admin'
				.red.btn#rmPasien Hapus
			.right.orange.btn#close Tutup
			if rawat
				table.bordered
					thead: tr
						each val in heads.rawat
							th= startCase(val)
						if userRole 'admin'
							th Hapus
					tbody
						each sortBy rawat 'tanggal' 'asc'
							tr
								td= hari(tanggal)
								td {{look 'klinik' klinik 'label'}}
								td {{look 'cara_bayar' cara_bayar 'label'}}
								if billRegis
									td Sudah
								else
									td Belum
								if status_bayar
									td Sudah
								else
									td Belum
								td: a.modal-trigger(href='#preview') cek
								if userRole 'admin'
									td: a#rmRawat hapus
	with preview
		.modal#preview
			.modal-content
				table
					tr
						th Tanggal
						td= hari(tanggal)
						th Cara Bayar
						td {{look 'cara_bayar' cara_bayar 'label'}}
						th Klinik
						td {{look 'klinik' klinik 'label'}}
					br
					br
				if anamesa_perawat
					h5 Anamesa Perawat
					p= anamesa_perawat
				if anamesa_dokter
					h5 Anamesa Dokter
					p= anamesa_dokter
				if diagnosa
					h5 Diagnosa Pasien
					p= diagnosa
				br
				if fisik
					h5 Daftar Cek Fisik
					table
						thead: tr
							each val in heads.fisik
								th= startCase(val)
						tbody
							each fisik
								tr
									td= tekanan_darah
									td= nadi
									td= suhu
									td= pernapasan
									td= berat
									td= tinggi
									td= lila
				br
				br
				if tindakan
					h5 Daftar Tindakan
					table
						thead: tr
							each val in heads.previewDokter
								th= startCase(val)
						tbody
							each tindakan
								tr
									td {{look2 'tarif' nama 'nama'}}
									td {{look2 'dokter' dokter 'nama'}}
									td= rupiah(harga)
					br
					br
				if labor
					h5 Daftar Laboratorium
					table
						thead: tr
							each val in heads.previewLabor
								th= startCase(val)
						tbody
							each labor
								tr
									td {{look2 'tarif' nama 'grup'}}
									td {{look2 'tarif' nama 'nama'}}
									td= hasil
					br
					br
				if obat
					h5 Daftar Obat
					table
						thead: tr
							each val in heads.previewObat
								th= startCase(val)
						tbody
							each obat
								tr
									td {{look2 'gudang' nama 'nama'}}
									td= aturan.dosis
									td {{look 'bentuk' aturan.bentuk 'label'}}
									td= aturan.kali
									td= jumlah
					br
					br
				if radio
					h5 Daftar Radiologi
					table
						thead: tr
							each val in heads.previewRadio
								th= startCase(val)
						tbody
							each radio
								tr
									td {{look2 'tarif' nama 'nama'}}
									td= hasil
					br
					br
				with total
					table
						tr
							if tindakan
								th Total Tindakan
								td= rupiah(tindakan)
							if labor
								th Total Labor
								td= rupiah(labor)
						tr
							if radio
								th Total Radio
								td= rupiah(radio)
							if obat
								th Total Obat
								td= rupiah(obat)
						tr
							if semua
								th Total Semua
								td: b= rupiah(semua)

