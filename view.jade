template(name='gudang'): .container
	h5 Daftar Barang Gudang
	.row
		.col.m8
			unless showForm
				unless currentPar 'idbarang'
					.input-field: input#search(value= search placeholder='Nama Obat / Batch')
		.col.m4
			if userGroup 'farmasi'
				.right.btn#showForm Tambah
	if showForm
		+quickForm(
			collection= coll.gudang
			schema= schema
			type= formType
			id = 'formGudang'
			scope = 'batch'
			doc= gudangs
		)
	unless currentPar 'idbarang'
		table.bordered
			thead: tr
				each val in heads.barang
					th= startCase(val)
				if userRole 'admin'
					th Hapus
			tbody
				each gudangs
					tr#row
						td {{look 'barang' jenis 'label'}}
						td= nama
						td= akumulasi.digudang
						td= akumulasi.diapotik
						if userRole 'admin'
							td: a#rmBarang hapus
		br
		br
		.row
			.col.m2: .btn#nearEds Near-ED
			.col.m2
				input#returnable(type='checkbox')
				label(for='returnable') Returnable
			.col.m2: .btn#latestAmprah Amprahan
		if nearEds
			h5 Menjelang Kadaluarsa
			table
				thead: tr
					th Nama Obat
					each val in heads.batch
						th= startCase(val)
				tbody
					each nearEds
						tr#nearEd
							td= nama
							td= nobatch
							td= hari(masuk)
							td= hari(kadaluarsa)
							td= beli
							td= jual
							td= digudang
							td= diapotik
							td= suplier
		if latestAmprah
			h5 Daftar Amprah
			table
				thead: tr
					each val in heads.latestAmprah
						th= startCase(val)
				tbody
					each val in latestAmprah
						each val.amprah
							tr
								td: a(href="/farmasi/{{val.idbarang}}")= val.nama
								td= startCase(ruangan)
								td= userName(peminta)
								td= diminta
								td= hari(tanggal)
	if currentPar 'idbarang'
		h5 Rincian Barang
		with gudangs
			table
				tr
					th Nama
					td= nama
				tr
					th Kandungan
					td= kandungan
				tr
					th Satuan
					td= satuan
			br
			h5 Batch
			table
				thead: tr
					each val in heads.batch
						th= startCase(val)
					th Returnable
					if userRole 'admin'
						th Hapus
				tbody
					each batch
						tr#transfer
							td= nobatch
							td= hari(masuk)
							td(class="{{warning kadaluarsa}}-text")= hari(kadaluarsa)
							td= beli
							td= jual
							td= digudang
							td= diapotik
							td= suplier
							td= returnable
							td: a#rmBatch(href='#') hapus
		h5 Amprah
		.right.btn#addAmprah +Amprah
		if addAmprah
			+quickForm(
				collection = coll.gudang
				schema = schemaAmprah
				type = 'update-pushArray'
				id = 'formAmprah'
				doc = gudangs
				scope = 'amprah'
			)
		table
			thead: tr
				each val in heads.amprah
					th= startCase(val)
			tbody
				with gudangs
					each amprah
						tr#amprah
							td= startCase(ruangan)
							td= userName(peminta)
							td= diminta
							td= userName(penyerah)
							td= diserah
							td= hari(tanggal)
	br
	if userRole 'admin'
		unless currentPar 'idbarang'
			unless showForm
				+import
				+export

template(name='manajemen'): .container
	h5
		unless onUser
			span Tambahkan Karyawan
		else
			span Berikan Peranan
	form#userForm
		input(name='username' placeholder='Username' value= onUser.username)
		unless onUser
			input(name='password' placeholder='Password' type='password')
			input(name='repeat' placeholder='Ulangi Password' type='password')
		if onUser
			.row
				p Peranan
				each val in selRoles
					input(type='radio' name='role' id=val)
					label(for=val)= startCase(val)
			.row
				p Grup
				each modules
					input(type='radio' name='group' id=name)
					label(for=name)= full
			.row
				p Poli
				each klinik
					input(type='radio' name='poli' id=label)
					label(for=label)= label
		input.btn(type='submit')
	.right.orange.btn#close Close
	h5 Daftar Karyawan
	table
		thead
			tr
				th Username
				th Peran
				th Aksi
		tbody
			each users
				tr#row
					td= username
					td= stringify(roles)
					td: a#reset Reset

	h5 Tambahkan Dokter
	+quickForm(
		collection= coll.dokter
		schema= schemadokter
		type= 'insert'
		id= 'formDokter'
	)
	h5 Daftar Dokter
	table
		thead
			tr
				th Nama
				th Tipe
				th Poli
		tbody
			each dokters
				tr#baris.dokter
					td= nama
					td {{look 'tipe_dokter' tipe 'label'}}
					td {{look 'klinik' poli 'label'}}
	+pagination(name= 'dokter')

	h5 Tambahkan Tarif
	+quickForm(
		collection= coll.tarif
		schema= schematarif
		type= 'insert'
		id= 'formTarif'
	)
	h5 Daftar Tarif
	table
		thead
			tr
				th Jenis
				th Nama
				th Harga
				th Grup
		tbody
			each tarifs
				tr#baris.tarif
					td= startCase(jenis)
					td= startCase(nama)
					td= rupiah(harga)
					td= grup
	+pagination(name= 'tarif')
	+import
	+export

